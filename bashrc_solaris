#export statements
export PATH="/usr/local/gnu/bin:$PATH"

#aliases for ls
alias ls="/usr/local/gnu/bin/ls -h --color=always"

function upload () {
	if [ "$2" == "" ]
	then
		repo=testing
	else
		repo=$2
	fi
	find ~/rpmbuild/ -name $1*.rpm | xargs rpm --resign
	scp $(find ~/rpmbuild/ -name $1*.rpm) rpm:/rpm/CHECK_PEND.$repo
}
